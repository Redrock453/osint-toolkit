# OSINT Toolkit - API Keys Configuration
# Copy this file to .env and add your actual API keys

# ================================
# SHODAN - Internet Scanner
# ================================
# Get free API key at: https://developer.shodan.io/api
SHODAN_API_KEY=your_shodan_api_key_here

# ================================
# VirusTotal - Malware Analysis
# ================================
# Get free API key at: https://www.virustotal.com/
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ================================
# Have I Been Pwned - Breach Checking
# ================================
# Get free API key at: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=your_hibp_api_key_here

# ================================
# Intelligence X - Deep Web Search
# ================================
# Get free tier at: https://intelx.io/
INTELX_API_KEY=your_intelx_api_key_here
INTELX_API_HOST=api.intelx.io

# ================================
# Censys - Internet Inventory
# ================================
# Get free API access at: https://censys.io/
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# ================================
# SecurityTrails - DNS Intelligence
# ================================
# Get free tier at: https://securitytrails.com/
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here

# ================================
# BinaryEdge - Internet Scanner
# ================================
# Get free key at: https://app.binaryedge.io/
BINARYEDGE_API_KEY=your_binaryedge_api_key_here

# ================================
# GitHub - Git Operations
# ================================
# For GitLeaks and repository scanning
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# ================================
# Reddit - Forum Monitoring
# ================================
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=osint_toolkit/1.0

# ================================
# Telegram - Alerts (Optional)
# ================================
# Create bot at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ================================
# Email - SMTP Alerts (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_FROM=osint@yourdomain.com
ALERT_TO=your_email@gmail.com

# ================================
# SpiderFoot Configuration
# ================================
SPIDERFOOT_LISTEN_PORT=5001
SPIDERFOOT_LISTEN_ADDRESS=127.0.0.1
SPIDERFOOT_DEBUG=false

# ================================
# Database Configuration
# ================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=osint_toolkit
POSTGRES_USER=osint_user
POSTGRES_PASSWORD=changeme_secure_password

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# Tor Configuration (Optional)
# ================================
# For dark web monitoring
TOR_PROXY=socks5h://127.0.0.1:9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=your_tor_control_password

# ================================
# Application Settings
# ================================
LOG_LEVEL=INFO
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300
RESULTS_RETENTION_DAYS=30

# ================================
# Webhook Notifications (Optional)
# ================================
# For Slack, Discord, etc.
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
WEBHOOK_ENABLED=false
